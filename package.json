{
  "name": "carnet-digital",
  "main": "expo-router/entry",
  "version": "1.0.0",
  "scripts": {
    "limpiar": "rm -rf node_modules && rm package-lock.json && rm -rf .expo && rm -rf .expo-shared && npm i",
    "ios:build": "eas build --platform ios --profile production",
    "ios:deploy": "eas submit --platform ios",
    "android:build": "eas build --platform android --profile production",
    "android:deploy": "eas submit --platform android",
    "start": "expo start",
    "start:dev": "expo start --dev-client",
    "start:prod": "expo start --no-dev",
    "android": "expo start --android",
    "android:dev": "expo start --android --dev-client",
    "android:prod": "expo start --android --no-dev",
    "ios": "expo start --ios",
    "ios:dev": "expo start --ios --dev-client",
    "ios:prod": "expo start --ios --no-dev",
    "web": "expo start --web",
    "test": "jest --watchAll",
    "test:ci": "jest --no-coverage",
    "test:e2e": "maestro test --format html e2e/basic_test.yaml",
    "lint": "expo lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "generate:api": "nswag run nswag.json"
  },
  "jest": {
    "preset": "jest-expo",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.ts"
    ]
  },
  "dependencies": {
    "@expo/vector-icons": "^14.0.2",
    "@react-navigation/native": "^7.0.14",
    "@tanstack/react-query": "^5.68.0",
    "expo": "~52.0.38",
    "expo-font": "~13.0.4",
    "expo-linking": "~7.0.5",
    "expo-print": "~14.0.3",
    "expo-router": "~4.0.18",
    "expo-sharing": "~13.0.1",
    "expo-splash-screen": "~0.29.22",
    "expo-status-bar": "~2.0.1",
    "expo-system-ui": "~4.0.8",
    "expo-web-browser": "~14.0.2",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-native": "0.76.7",
    "react-native-popup-menu": "^0.17.0",
    "react-native-reanimated": "~3.16.1",
    "react-native-safe-area-context": "4.12.0",
    "react-native-screens": "~4.4.0",
    "react-native-web": "~0.19.13",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@testing-library/react-native": "^13.3.3",
    "@types/jest": "^30.0.0",
    "@types/react": "~18.3.12",
    "eslint": "^8.57.0",
    "eslint-config-expo": "~8.0.1",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^29.2.1",
    "jest-expo": "~52.0.6",
    "prettier": "^3.8.1",
    "react-test-renderer": "18.3.1",
    "typescript": "~5.3.3"
  },
  "private": true
}
