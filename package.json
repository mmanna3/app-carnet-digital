{
  "name": "carnet-digital",
  "main": "expo-router/entry",
  "version": "1.0.0",
  "scripts": {
    "limpiar": "rm -rf node_modules && rm package-lock.json && rm -rf .expo && rm -rf .expo-shared && npm i",
    "ios:build": "eas build --platform ios --profile production-${LIGA_ID:?LIGA_ID es obligatorio}",
    "ios:deploy": "eas submit --platform ios --profile production-${LIGA_ID:?LIGA_ID es obligatorio}",
    "android:build": "eas build --platform android --profile production-${LIGA_ID:?LIGA_ID es obligatorio}",
    "android:deploy": "eas submit --platform android --profile production-${LIGA_ID:?LIGA_ID es obligatorio}",
    "start": "expo start",
    "start:dev": "expo start --dev-client",
    "start:prod": "expo start --no-dev",
    "android": "expo run:android",
    "android:dev": "expo start --android --dev-client",
    "android:prod": "expo start --android --no-dev",
    "ios": "expo run:ios",
    "ios:dev": "expo start --ios --dev-client",
    "ios:prod": "expo start --ios --no-dev",
    "web": "expo start --web",
    "test": "jest --watchAll",
    "test:ci": "jest --no-coverage",
    "test:e2e": "maestro test e2e/",
    "typecheck": "tsc --noEmit",
    "lint": "expo lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "generate:api": "nswag run nswag.json",
    "prebuild": "expo prebuild",
    "prebuild:clean": "expo prebuild --clean && node scripts/patch-splash-background.js"
  },
  "jest": {
    "preset": "jest-expo",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.ts"
    ]
  },
  "dependencies": {
    "@expo/vector-icons": "^15.0.3",
    "@react-native-async-storage/async-storage": "2.2.0",
    "@react-native-community/datetimepicker": "8.4.4",
    "@react-navigation/native": "^7.0.14",
    "@tanstack/react-query": "^5.68.0",
    "expo": "~54.0.0",
    "expo-constants": "~18.0.13",
    "expo-font": "~14.0.11",
    "expo-image-manipulator": "~14.0.8",
    "expo-image-picker": "^17.0.10",
    "expo-linking": "~8.0.11",
    "expo-print": "~15.0.8",
    "expo-router": "~6.0.23",
    "expo-sharing": "~14.0.8",
    "expo-splash-screen": "~31.0.13",
    "expo-status-bar": "~3.0.9",
    "expo-system-ui": "~6.0.9",
    "expo-web-browser": "~15.0.10",
    "nativewind": "^4.2.2",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5",
    "react-native-popup-menu": "^0.17.0",
    "react-native-reanimated": "~4.1.1",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-web": "^0.21.0",
    "react-native-worklets": "0.5.1",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@testing-library/react-native": "^13.3.3",
    "@types/jest": "^29.5.14",
    "@types/react": "~19.1.10",
    "eslint": "^9.0.0",
    "eslint-config-expo": "~10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^29.2.1",
    "jest-expo": "~54.0.17",
    "prettier": "^3.8.1",
    "react-test-renderer": "19.1.0",
    "tailwindcss": "^3.4.19",
    "typescript": "~5.9.2"
  },
  "private": true
}
